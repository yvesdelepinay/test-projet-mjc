{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des utilisateurs</h1>
    <ul>
        <li>
            <a class="btn btn-new" href="{{ path('user_new') }}">Créer un nouvel utilisateur</a>
        </li>
    </ul>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Date de naissance</th>
                <th>Role</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td>{% if user.birthAt %}{{ user.birthAt|date('d-m-Y') }}{% endif %}</td>
                <td>{{ user.role }}</td>
                <td>{% if user.isActive %}Oui{% else %}Non{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-primary" href="{{ path('user_show', { 'id': user.id }) }}">voir</a>
                        </li>
                        <li>
                            <a class="btn btn-warning" href="{{ path('user_edit', { 'id': user.id }) }}">modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
