{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{% if user.birthAt %}{{ user.birthAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{% if user.isActive %}Oui{% else %}Non{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-primary" href="{{ path('user_index') }}">Retour à la liste</a>
        </li>
        <li>
            <a class="btn btn-warning" href="{{ path('user_edit', { 'id': user.id }) }}">Modifier</a>
        </li>
        <li>
			{% if is_granted('ROLE_ADMIN') %}
            {{ form_start(delete_form) }}
                <input class="btn btn-delete" type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
			{% endif %}
        </li>
    </ul>
{% endblock %}
